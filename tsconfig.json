{
  "compilerOptions": {
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "target": "ES2020",
    "noEmit": true,
    "jsxImportSource": "vue",
    "useDefineForClassFields": true,

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": false,

    "skipLibCheck": true,
    "inlineSourceMap":true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@images": ["./src/assets/images/*"]
    },
    "types": [
      "@types/node",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "./env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "public"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "vueCompilerOptions": {
    "target": 3.5,

    "extensions": [
      ".vue"
    ]
  }
}
